generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("postgreSQL_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model MovieList {
  id          String   @id @default(uuid())
  title       String
  releaseDate String
  url         String?
  status      Status   @default(notReleased)
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt

  @@unique([title, releaseDate])
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

enum Status {
  notReleased
  firstRound
  leaveFirstRound
  secondRound
  leaveSecondRound
  Streaming
}
